<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Portfolio</h2>
                <div class="row">
                    <div id="tag-container" class="col-md-12 text-center">
                        <h4>
                            <span class="clickable tag tag2">{{ projectCats[2] }}</span>
                            <span class="clickable tag tag1">{{ projectCats[1] }}</span>
                            <span class="clickable tag tag8">{{ projectCats[8] }}</span>
                            <span class="clickable tag tag6">{{ projectCats[6] }}</span>
                            <span class="clickable tag tag4">{{ projectCats[4] }}</span>
                            <span class="clickable tag tag9">{{ projectCats[9] }}</span>
                            <span class="clickable tag tag5">{{ projectCats[5] }}</span>
                            <span class="clickable tag tag3">{{ projectCats[3] }}</span>
                            <span class="clickable tag tag10">{{ projectCats[10] }}</span>
                            <span class="clickable tag tag11">{{ projectCats[11] }}</span>
                            <span class="clickable tag tag7">{{ projectCats[7] }}</span>
                            <span class="clickable tag tag12">{{ projectCats[12] }}</span>

                            <hr>

                            <a id="rz"><span>RÃ€Z !</span></a>
                        </h4>
                    </div>
                </div>
                <hr>
                {% for project in projects %}
                        <div class="row project-single {% for tag in project.tags %} tag{{ tag }}{% endfor %} hidden">
                            <div class="col-md-12 "><h3 class="text-left">{{ project.title }}
                                    {% if project.end is not empty and project.end > project.start %}
                                        ( {{ project.start }} - {{ project.end }} )
                                    {% else %}
                                        ( {{ project.start }} )
                                    {% endif %}
                                </h3>
                            </div>
                            <div class="col-md-12">
                                <h4>
                                    {% for tag in project.tags %}
                                        <span class="tag tag{{ tag }}">{{ projectCats[tag] }}</span>
                                    {% endfor %}
                                </h4>
                            </div>
                            <div class="col-md-12 portfolio-images text-center">
                                {% for image in project.images %}
                                    <div class="col-md-{{ 12 / (project.images|length) }}">
                                        <img src="{{ asset('assets/images/projects/')~image }}">
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="col-md-12">
                                {{ project.shortdesc }}
                            </div>
                        </div>
                {% for image in project.images %}
                <div class="parente col-md-4">
                    <div class="containere">
                        <img src="{{ asset('assets/images/projects/')~image }}" class="imjj ratio{{ project.ratios[loop.index0] }}">
                    </div>
                    </div>
                {% endfor %}

                    <hr class="hidden">
                {% endfor %}
                <p class="space">.</p>
            </div>
        </div>
    </div>
</section>
